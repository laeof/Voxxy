{
    "ConnectionStrings": {
        "Database": "Host=localhost;Port=5432;Database=voxxy_db;Username=postgres;Password=postgres;Include Error Detail=true",
        "AzureStorage": "UseDevelopmentStorage=true"
    },
    "Serilog": {
        "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information"
            }
        },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "Seq",
                "Args": { "ServerUrl": "http://seq:5341" }
            }
        ],
        "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
    },
    "Jwt": {
        "Secret": "super-duper-secret-value-that-should-be-in-user-secrets",
        "Issuer": "Voxxy",
        "Audience": "developers",
        "ExpirationInMinutes": 120,
        "ExpirationInDays": 30
    },
    "Defaults": {
        "UserAvatarUrl": "https://i.scdn.co/image/ab6775700000b8a8cbc53546aa73b333130ab680",
        "AudioLogicUrl": "{id}/original.mp3",
        "PlaylistImageUrl": "{id}/cover.jpg",
        "ArtistImageUrl": "{id}/artist.jpg"
    }
}
